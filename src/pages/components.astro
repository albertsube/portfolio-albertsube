---
import Badge from "../components/Badge.astro"
import SectionContainer from "../components/SectionContainer.astro"
import SocialPill from "../components/SocialPill.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout title="Design system" description="Components catalog of the portfolio">
  <main>
    <SectionContainer class="md:pt-20">
      <h1
        class="text-white text-4xl md:text-5xl font-bold
        flex justify-center items-center gap-4 pb-10
        flex-col md:flex-row"
      >
        Design System
      </h1>
    </SectionContainer>

    <SectionContainer id="Badge" class="flex gap-10">
      <article>
        <h1>&lt;Badge /&gt;</h1>
        <Badge>Badge</Badge>
      </article>

      <article>
        <h1>&lt;SocialPill /&gt;</h1>
        <SocialPill>Social Pill</SocialPill>
      </article>
    </SectionContainer>
  </main>
</Layout>
