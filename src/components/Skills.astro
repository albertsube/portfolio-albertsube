---
import Javascript from "./icons/Javascript.astro";
import React from "./icons/React.astro";
import Node from "./icons/Node.astro";
import Express from "./icons/Express.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Git from "./icons/Git.astro";
import MongoDB from "./icons/MongoDB.astro";
import Nest from "./icons/Nest.astro";
import Next from "./icons/Next.astro";
import Typescript from "./icons/Typescript.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import Postgres from "./icons/Postgres.astro";

const SKILLS = [
  HTML,
  CSS,
  Javascript,
  Typescript,
  React,
  Tailwind,
  Node,
  Express,
  Nest,
  MongoDB,
  Postgres,
  Next,
  AstroIcon,
  Git,
];
---

<section class="fade-mask max-w-[600px] overflow-hidden">
  <ul
    class="flex flex-wrap gap-8 pt-8 w-fit [&>*>*]:size-20
    md:[&>*>*]:size-28 md:flex-nowrap slide"
  >
    {
      SKILLS.map((Skill) => (
        <li>
          <Skill />
        </li>
      ))
    }
    {
      SKILLS.map((Skill) => (
        <li class="hidden md:block">
          <Skill />
        </li>
      ))
    }
  </ul>
</section>

<style>
  @keyframes slide-animation {
    to {
      transform: translateX(calc(-50% - 1rem));
    }
  }

  .slide {
    @media (min-width: 768px) {
      animation: slide-animation 20s linear 0s infinite;
    }
  }

  .fade-mask {
    @media (min-width: 768px) {
      mask: linear-gradient(
        90deg,
        transparent,
        white 20%,
        white 80%,
        transparent
      );
    }
  }
</style>
